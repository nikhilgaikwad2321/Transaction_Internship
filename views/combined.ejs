<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Combined Response</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .card {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 600px;
        }
        .card-title {
            font-size: 24px;
            margin-bottom: 10px;
            color: #333333;
        }
        .section {
            margin-bottom: 20px;
        }
        .section-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #555555;
        }
        .list-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="card">
        <h1 class="card-title">Combined Response</h1>
        
        <div class="section">
            <h2 class="section-title">Price Ranges</h2>
            <ul>
                <% combinedResponse.priceRanges.forEach(range => { %>
                    <li class="list-item"><%= range.range %>: <%= range.count %></li>
                <% }); %>
            </ul>
        </div>
        
        <div class="section">
            <h2 class="section-title">Categories</h2>
            <ul>
                <% combinedResponse.response.forEach(category => { %>
                    <li class="list-item"><%= category.category %>: <%= category.count %></li>
                <% }); %>
            </ul>
        </div>
        
        <div class="section">
            <h2 class="section-title">Statistics</h2>
            <p>Total Sale Amount: <%= combinedResponse.statistics.totalSaleAmount %> Rs</p>
            <p>Total Sold Items: <%= combinedResponse.statistics.totalSoldItems %></p>
            <p>Total Not Sold Items: <%= combinedResponse.statistics.totalNotSoldItems %></p>
        </div>
    </div>
</body>
</html>
